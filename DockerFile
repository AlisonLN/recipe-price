# Fase de build usando Maven e Amazon Corretto
FROM maven:3.9.7-amazoncorretto-17 AS build

# Copia o código-fonte e o arquivo pom.xml
COPY src /app/src
COPY pom.xml /app

# Define o diretório de trabalho
WORKDIR /app

# Executa o build do projeto com Maven
RUN mvn clean install

# Fase final usando a imagem leve do Amazon Corretto
FROM amazoncorretto:17-alpine-jdk

# Copia o arquivo .jar gerado na fase de build
COPY --from=build /app/target/agenda-0.0.1-SNAPSHOT.jar /app/app.jar

# Define o diretório de trabalho
WORKDIR /app

# Expõe a porta 8080 para a aplicação
EXPOSE 8080

# Comando para rodar a aplicação Java
CMD ["java", "-jar", "app.jar"]
